function myentity_entity_info(){
  $myentity_info['myentity'] = array(
    'label' => t('My entity'),
    'controller class' => 'MyentityController',
    'base table' => 'myentity',
    'uri callback' => 'myentity_uri',
    'fieldable' => TRUE,
    'entity keys' => array(
      'id' => 'myid',
