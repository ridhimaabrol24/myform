    'page callback' => 'myentity_page_view',
    'page arguments' => array(1),
    'access arguments' => array('view myentity'),
    'type' => MENU_CALLBACK,
  );
  $items['myentity/add'] = array(
    'title' => 'Add myentity!',
    'page callback' => 'myentity_add',
    'access arguments' => array('create myentity'),
  );
  return $items;
}

